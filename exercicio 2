#include <stdio.h>
#include <stdlib.h>
#define qnt 1

struct veiculo{
    char proprietario[30];
    char combustivel[10];
    char modelo[25];
    char cor[20];
    int num;
    int ano;
    char placa[9];
};
struct veiculo v[qnt];

int main(){
    int i;

    for(i = 0;i < qnt;i++){
        printf("Nome do proprietario:");
        gets(v[i].proprietario);

        printf("Nome do combustivel:");
        gets(v[i].combustivel);

        printf("Modelo do veiculo:");
        gets(v[i].modelo);

        printf("Cor do veiculo");
        gets(v[i].cor);

        printf("Numero de chassi");
        scanf("%d", &v[i].num);

        printf("Ano que foi fabricado");
        scanf("%d", &v[i].ano);


        printf("Placa do veiculo");
        printf("3 primeiros valores alfabéticos e os 4 restantes números");
        gets(v[i].placa);

    }

 return 0;
}
